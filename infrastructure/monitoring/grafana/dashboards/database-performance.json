{
  "dashboard": {
    "title": "Database Performance - DeepAgents Platform",
    "tags": ["database", "postgresql"],
    "timezone": "browser",
    "editable": true,
    "refresh": "1m",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [80], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "Too Many Database Connections"
        }
      },
      {
        "id": 2,
        "title": "Database Size",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "pg_database_size_bytes",
            "legendFormat": "{{datname}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes"}
        ]
      },
      {
        "id": 3,
        "title": "Transactions Per Second",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit[5m])",
            "legendFormat": "Commits",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_xact_rollback[5m])",
            "legendFormat": "Rollbacks",
            "refId": "B"
          }
        ],
        "description": "Committed and rolled back transactions per second"
      },
      {
        "id": 4,
        "title": "Cache Hit Ratio",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "(sum(pg_stat_database_blks_hit) / (sum(pg_stat_database_blks_hit) + sum(pg_stat_database_blks_read))) * 100",
            "legendFormat": "Cache Hit Ratio",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 100, "min": 0}
        ],
        "description": "Percentage of blocks read from cache vs disk. Higher is better (target >95%)"
      },
      {
        "id": 5,
        "title": "Query Duration (Slow Queries)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "pg_stat_activity_max_tx_duration",
            "legendFormat": "Max Query Duration",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [30], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "Slow Query Alert"
        }
      },
      {
        "id": 6,
        "title": "Deadlocks",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(pg_stat_database_deadlocks[5m])",
            "legendFormat": "Deadlocks/sec",
            "refId": "A"
          }
        ],
        "description": "Database deadlocks per second"
      },
      {
        "id": 7,
        "title": "Rows Read vs Returned",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(pg_stat_database_tup_fetched[5m])",
            "legendFormat": "Rows Fetched",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_tup_returned[5m])",
            "legendFormat": "Rows Returned",
            "refId": "B"
          }
        ],
        "description": "Index efficiency indicator. Large gap may indicate missing indexes"
      },
      {
        "id": 8,
        "title": "Rows Inserted/Updated/Deleted",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "rate(pg_stat_database_tup_inserted[5m])",
            "legendFormat": "Inserted",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_tup_updated[5m])",
            "legendFormat": "Updated",
            "refId": "B"
          },
          {
            "expr": "rate(pg_stat_database_tup_deleted[5m])",
            "legendFormat": "Deleted",
            "refId": "C"
          }
        ]
      },
      {
        "id": 9,
        "title": "Database Locks",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "pg_locks_count",
            "legendFormat": "{{mode}}",
            "refId": "A"
          }
        ],
        "description": "Active locks by type"
      }
    ]
  }
}
