# DeepAgents Control Platform - Environment Configuration
# Copy this file to .env and update values for your environment

# Application Settings
PROJECT_NAME="DeepAgents Control Platform"
VERSION="1.0.0"
API_V1_STR="/api/v1"
ENVIRONMENT="development"  # development, testing, production

# Database Configuration
# For development with Docker Compose (from infrastructure/docker-compose.yml)
DATABASE_URL=postgresql+asyncpg://deepagents:dev_password_change_in_production@localhost:5432/deepagents_platform

# For production (WITH SSL/TLS - REQUIRED FOR SECURITY)
# IMPORTANT: Add ?sslmode=require to enforce encrypted connections
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database?sslmode=require
#
# SSL Modes (use 'require' or higher for production):
#   - disable: No SSL (INSECURE - never use in production)
#   - require: SSL required, but server certificate not verified
#   - verify-ca: SSL required, server certificate verified against CA
#   - verify-full: SSL required, server certificate and hostname verified (most secure)
#
# For testing (in-memory SQLite)
# DATABASE_URL=sqlite+aiosqlite:///:memory:

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration
# CRITICAL: SECRET_KEY is required and must be at least 32 characters
# NEVER use default/example values in production!
#
# Generate a secure random key with one of these commands:
#   openssl rand -hex 32
#   python -c 'import secrets; print(secrets.token_hex(32))'
#
# Example (DO NOT USE THIS - generate your own):
# SECRET_KEY=a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456
SECRET_KEY=REPLACE_THIS_WITH_SECURE_RANDOM_KEY_MIN_32_CHARS

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Credential Encryption for External Tools
# IMPORTANT: Generate a Fernet encryption key for production
# You can generate one with: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
CREDENTIAL_ENCRYPTION_KEY=your-fernet-key-here-generate-with-command-above

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:3001

# External API Keys (Optional)
# Anthropic API Key for Claude models
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# OpenAI API Key for GPT models
OPENAI_API_KEY=sk-your-openai-api-key-here

# Logging Configuration (Optional)
# LOG_LEVEL=INFO
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
